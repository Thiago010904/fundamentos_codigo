<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Servicio de limpieza</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
  .card {
    margin-left: 250px;
    margin-top: 50px;
    width: 1000px;
    height: 440px;
    border-radius: 5px;
    border-width: 5px;
    background: white;
    border-color: #2196F3;

  }

  button {
    font-family: inherit;
    font-size: 18px;
    background: linear-gradient(to bottom, #4dc7d9 0%, #66a6ff 100%);
    color: white;
    padding: 0.8em 1.2em;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 25px;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    transition: all 0.3s;
  }

  button:hover {
    transform: translateY(-3px);
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
  }

  button:active {
    transform: scale(0.95);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
  }

  button span {
    display: block;
    margin-left: 0.4em;
    transition: all 0.3s;
  }

  button svg {
    width: 18px;
    height: 18px;
    fill: white;
    transition: all 0.3s;
  }

  button .svg-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    margin-right: 0.5em;
    transition: all 0.3s;
  }

  button:hover .svg-wrapper {
    background-color: rgba(255, 255, 255, 0.5);
  }

  button:hover svg {
    transform: rotate(45deg);
  }
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'calibri';
  }
  
  header {
    background: #1163ff;
    width: 100%;
    clear: both;
    content: '';
    display: table;
  }
  
  .menu {
    width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center; /* Centramos verticalmente los elementos */
  }
  
  #auxilium {
    width: 100px;
    height: auto;
    transition: transform 0.3s ease;
    transform: scale(3.6);
    pointer-events: none;
  }
  
  nav {
    flex-grow: 1;
  }
  
  nav ul {
    display: flex; 
    justify-content: flex-end; 
    list-style: none;
  }
  
  nav ul li {
    margin-left: 20px; 
  }
  
  nav ul li a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
  }
  
  nav ul li a:hover {
    color: #5ce1e6;
  }
  
  nav ul li a::before {
    display: block;
    content: '';
    width: 0%;
    background: #5ce1e6;
    height: 5px;
    top: 0;
    transition: width 0.2s;
  }
  
  nav ul li a:hover::before {
    width: 100%;
  }
</style>

<body>
  <header>
    <div class="menu">
      <img src="https://i.ibb.co/M1kNmjn/zyro-image.png" id="auxilium">
      <nav>
        <ul>
          <li><a href="/home">Inicio</a></li>
          <li><a href="/services">Nuestros Servicios</a></li>
          <li><a href="/perfil">Perfil</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <h1 class="text-center">
    Servicios de limpieza
  </h1>
  <div class="card">
    <div class="row">
      <div class="col-md-4 text-center">
        <br>
        <img src="https://i0.wp.com/limpiafacil.com.co/wp-content/uploads/2021/07/pymes-dia.jpg?fit=450%2C300&ssl=1"
          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 200px; margin-top: 50px;" />
      </div>
      <div class="col-md-8">
        <div class="card-body ">
          <form action="/enviar-correo" method="POST">
            <h3>Formulario de Servicio</h3>
            <br>
            <br>
            <div class="row">
              <div class="col-sm-5">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="nombre" id="nombre">
              </div>
              <div class="col-sm-5">
                <label for="">Dirección</label>
                <input type="text" class="form-control" name="direccion" id="direccion">
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-sm-5">
                <label for="">Número de habitaciones</label>
                <input type="number" class="form-control" name="numhabs" id="numhabs">
              </div>
              <div class="col-sm-5">
                <label for="">Télefono</label>
                <input type="number" class="form-control" name="phoneNumber" id="phoneNumber">
              </div>
              <div class="col-sm-5">
                <label for="">Fecha</label>
                <input type="date" class="form-control" name="fecha" id="fecha">
              </div>
            </div>
            <br>
            <br>
            <div class="">
              <button type="button" onclick="alerta('limpieza')">
                <div class="svg-wrapper-1">
                  <div class="svg-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                      <path fill="none" d="M0 0h24v24H0z"></path>
                      <path fill="currentColor"
                        d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z">
                      </path>
                    </svg>
                  </div>
                </div>
                <span>Enviar solicitud</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Importa los scripts de Bootstrap -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
  <script>
    function alerta(funcion) {
      const botonSeleccionado = funcion;
      const nombre = document.getElementById('nombre').value;
      const direccion = document.getElementById('direccion').value;
      const numhabs = document.getElementById('numhabs').value;
      const phoneNumber = document.getElementById('phoneNumber').value;
      const fecha = document.getElementById('fecha').value;
      Swal.fire({
        title: '¿Estas seguro?',
        text: "",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Si, hacer pedido'
      })
        .then((result) => {
          if (result.isConfirmed) {
            fetch('/enviar-correo', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ button: botonSeleccionado, nombre: nombre, direccion: direccion, numhabs: numhabs, phoneNumber: phoneNumber, fecha: fecha })
            })

            Swal.fire(
              'Pedido realizado',
              '',
              'success'
            )
          }
        })
    }
  </script>
</body>

</html>