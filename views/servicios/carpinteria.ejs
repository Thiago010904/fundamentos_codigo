<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
  .card {
    margin-left: 250px;
    margin-top: 50px;
    width: 1000px;
    height: 400px;
    border-radius: 5px;
    border-width: 5px;
    background: white;
    border-color: #2196F3;

  }

  button {
    font-family: inherit;
    font-size: 18px;
    background: linear-gradient(to bottom, #4dc7d9 0%, #66a6ff 100%);
    color: white;
    padding: 0.8em 1.2em;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 25px;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    transition: all 0.3s;
  }

  button:hover {
    transform: translateY(-3px);
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
  }

  button:active {
    transform: scale(0.95);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
  }

  button span {
    display: block;
    margin-left: 0.4em;
    transition: all 0.3s;
  }

  button svg {
    width: 18px;
    height: 18px;
    fill: white;
    transition: all 0.3s;
  }

  button .svg-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    margin-right: 0.5em;
    transition: all 0.3s;
  }

  button:hover .svg-wrapper {
    background-color: rgba(255, 255, 255, 0.5);
  }

  button:hover svg {
    transform: rotate(45deg);
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid d-flex flex-row justify-content-between">
      <div>
        <img src="http://drive.google.com/uc?export=view&id=1Rd8XF2WRN4WcJmcSmr5ilO1h3MbPfCab" alt="">
      </div>
      <div class="collapse navbar-collapse" id="navbarNav" style="margin-left: 700px;">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:7777/services">Nuestros Servicios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:7777/perfil">Perfil</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <h1 class="text-center">
    Servicios de Carpinteria
  </h1>
  <div class="card">
    <div class="row">
      <div class="col-md-4 text-center">
        <br>
        <img src="https://reformasintegrales.com.co/wp-content/uploads/2018/12/reparacion-madera-estructura-deck.jpg"
          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 200px; margin-top: 50px;" />
      </div>
      <div class="col-md-8">
        <div class="card-body ">
          <form action="/enviar-correo" method="POST">
            <h3>Formulario de Servicio</h3>
            <br>
            <br>
            <div class="row">
              <div class="col-sm-5">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="nombre" id="nombre">
              </div>
              <div class="col-sm-5">
                <label for="">Dirección</label>
                <input type="text" class="form-control" name="direccion" id="direccion">
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-sm-5">
                <label for="">Descripción del trabajo</label>
                <textarea class="form-control" name="textdescrip" id="textdescrip"> </textarea>
              </div>
              <div class="col-sm-5">
                <label for="">Télefono</label>
                <input type="number" class="form-control" name="phoneNumber">
              </div>
              <div class="col-sm-5">
                <label for="">Fecha</label>
                <input type="date" class="form-control" name="fecha">
              </div>
            </div>
            <br>
            <br>
            <div class="">
              <button type="button" onclick="alerta('carpintero')">
                <div class="svg-wrapper-1">
                  <div class="svg-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                      <path fill="none" d="M0 0h24v24H0z"></path>
                      <path fill="currentColor"
                        d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z">
                      </path>
                    </svg>
                  </div>
                </div>
                <span>Enviar solicitud</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Importa los scripts de Bootstrap -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
  <script>
    function alerta(funcion) {
      const botonSeleccionado = funcion;
      const nombre = document.getElementById('nombre').value;
      const direccion = document.getElementById('direccion').value;
      const textdescrip = document.getElementById('textdescrip').value;
      const phoneNumber = document.getElementById('phoneNumber').value;
      const fecha = document.getElementById('fecha').value;
      Swal.fire({
        title: '¿Estas seguro?',
        text: "",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Si, hacer pedido'
      })
        .then((result) => {
          if (result.isConfirmed) {
            fetch('/enviar-correo', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ button: botonSeleccionado, nombre: nombre, direccion: direccion, textdescrip: textdescrip, phoneNumber: phoneNumber, fecha: fecha })
            })

            Swal.fire(
              'Pedido realizado',
              '',
              'success'
            )
          }
        })
    }
  </script>
</body>

</html>