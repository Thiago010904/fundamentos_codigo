    color: rgb(0, 0, 0);
    font-weight: bold;
    text-transform: uppercase;
  }

  nav ul li a:hover {
    color: #5ce1e6;
  }

  nav ul li a::before {
    display: block;
    content: '';
    width: 0%;
    background: #5ce1e6;
    height: 5px;
    top: 0;
    transition: width 0.2s;
  }

  nav ul li a:hover::before {
    width: 100%;
  }
</style>
